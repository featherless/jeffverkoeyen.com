{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto-builder (Swift)",
            "type": "shell",
            "command": "while sleep 0.1; do find Sources -type f -name \"*.md\" -o -name \"*.swift\" | entr -d swift run; done",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Building",
                    "endsPattern": "^Build complete"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "HTTP Server",
            "type": "shell",
            "command": "python3",
            "args": ["-m", "http.server", "-d", "site/", "8082"],
            "group": "test",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Tailwind CSS Watcher",
            "type": "shell",
            "command": "npx",
            "args": ["tailwindcss", "-i", "tailwind.css", "-o", "./site/css/main.css", "--watch"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start All Preview Services",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Auto-builder (Swift)",
                "HTTP Server",
                "Tailwind CSS Watcher"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build Swift Site",
            "type": "shell",
            "command": "swift",
            "args": ["run"],
            "group": "build",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
